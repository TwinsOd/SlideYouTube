<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/video_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:id="@+id/video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:lineSpacingExtra="3dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/video_publish_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video_title"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/video_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video_publish_date"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
                android:drawablePadding="5dp"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/video_dislikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/video_likes"
                android:layout_below="@+id/video_publish_date"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/video_likes"
                android:drawableLeft="@drawable/ic_thumb_down_black_24dp"
                android:drawablePadding="5dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/video_views_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/video_publish_date"
                android:textSize="29sp"/>

            <TextView
                android:id="@+id/video_views_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/video_views_count"
                android:text="@string/view_count" />

            <TextView
                android:id="@+id/video_descr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video_likes"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="4dp"
                android:textSize="14sp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>