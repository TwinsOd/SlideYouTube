<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/video_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/colorTextDescriptionYouTube"
                android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/video_views_count"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorTextDescriptionYouTube"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/video_views_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextDescriptionYouTube"
                        android:text="@string/view_count" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_thumb_up_black_24dp"/>
                <TextView
                    android:id="@+id/video_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawablePadding="5dp"
                    android:textSize="20sp"
                    android:layout_gravity="start"
                    android:textColor="@color/colorTextDescriptionYouTube"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_thumb_down_black_24dp"/>

                <TextView
                    android:id="@+id/video_dislikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:layout_gravity="start"
                    android:textColor="@color/colorTextDescriptionYouTube"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/video_descr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video_likes"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/colorTextDescriptionYouTube"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/video_publish_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorTextDescriptionYouTube"
                android:textSize="14sp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>