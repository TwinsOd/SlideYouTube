<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vladymyr.slideyoutube.MainActivity">

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.example.slideyoutubelibs.DraggablePanel
        android:id="@+id/draggablePanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:draggable_panel="http://schemas.android.com/apk/res-auto"
        draggable_panel:x_scale_factor="2.3"
        draggable_panel:y_scale_factor="2.3"
        draggable_panel:top_fragment_height="200dp"
        draggable_panel:enable_horizontal_alpha_effect="false"
        draggable_panel:top_fragment_margin_right="20dp"
        draggable_panel:top_fragment_margin_bottom="58dp"/>
</RelativeLayout>
